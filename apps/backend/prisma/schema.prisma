generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @unique @default(cuid())
  email    String @unique
  password String

  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  workflows   Workflow[]
  credentials Credential[]
}

model Workflow {
  id      String  @unique @default(cuid())
  user_id String
  name    String  @default("Untitled Workflow")
  enabled Boolean @default(false)
  nodes   Json
  edges   Json
  flow    Json
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
  executions Execution[]
}

model Credential {
  id          String       @unique @default(cuid())
  user_id     String
  name        String       @default("Untitled Credential")
  application Applications
  data        Json

  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

enum Applications {
  whatsapp
  openai
  telegram
  resend
}

model AvailableTriggers {
  id          String   @unique @default(cuid())
  name        String
  type        String
  description String
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now())
}

model Execution {
  id         String   @id @default(cuid())
  workflow_id String
  started_at DateTime @default(now())
  ended_at   DateTime?
  status     ExecutionStatus @default(RUNNING)

  workflow       Workflow       @relation(fields: [workflow_id], references: [id], onDelete: Cascade)
  nodeExecutions NodeExecution[]
}

model NodeExecution {
  id           String   @id @default(cuid())
  execution_id String
  node_id      String   // Assuming this is a unique identifier for the node from the workflow's 'nodes' Json
  started_at   DateTime @default(now())
  ended_at     DateTime?
  status       ExecutionStatus
  output       Json?    // Optional field to store node output data
  error        Json?    // Optional field to store error details if failed

  execution Execution @relation(fields: [execution_id], references: [id], onDelete: Cascade)

  @@index([execution_id, node_id])
}

enum ExecutionStatus {
  RUNNING
  SUCCESS
  FAILED
}